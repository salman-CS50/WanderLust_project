<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="mb-3 col-6 offset-3">Login to wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="username" name="username" id="username" class="form-control" required />
            <div class="invalid-feedback">Username should be required!</div>
          </div>
          <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" required />
        <div class="invalid-feedback">Password should be required!</div>
        <button class="btn btn-success mt-3">Login</button>
    </form>
  </div>
</div>
