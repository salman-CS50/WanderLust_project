<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="mb-3 col-6 offset-3">Signup for wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="username" name="username" id="username" class="form-control" required />
        <div class="valid-feedback">Username looks good!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required />
        <div class="invalid-feedback">Email should be required!</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" required />
        <div class="invalid-feedback">Password should be required!</div>
      </div>
      <button class="btn btn-success">Signup</button>
    </form>
  </div>
</div>
